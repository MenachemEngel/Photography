<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_grey_terrazzo_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_image_save_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="שמירת תמונות" />

    <TextView
        android:id="@+id/tv_image_save_dialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="האם ברצונך לשמור את התמונה הזאת?"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/iv_image_save_dialog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>
